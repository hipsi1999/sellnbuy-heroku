<%- include('../partials/header.ejs'); %>

<div class="container" style="min-height: 88vh;">
    <div class="row">
        <h1 style="width:100%;text-align: center;color:white">Edit <%= product.name %></h1>
        <div style="width:40vh;margin:25px auto;">
            <form action="/products/<%= product._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="product[name]" value="<%= product.name %>" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control"  type="text" name="product[description]" value="<%= product.description %>" placeholder="description">
                </div>
                <div class="form-group">
                    <input class="form-control"  type="text" name="product[price]" value="<%= product.price %>" placeholder="description">
                </div>
                <div class="form-group text-center text-light">
                    You cant update image!
                </div>
                <div class="form-group">
                    <button class="btn btn-secondary btn-block">submit!</button>
                </div>
            </form>
            <a href="/products/<%= product._id %>">Go Back</a>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs'); %>