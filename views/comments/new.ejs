<%- include('../partials/header.ejs'); %>

<div class="container" style="min-height: 88vh;">
    <div class="row">
        <h1 style="width:100%;text-align: center;color:white">Add new comment to <%= product.name%></h1>
        <div style="width:40vh;margin:25px auto;">
            <form action="/products/<%= product._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-secondary btn-block">submit!</button>
                </div>
            </form>
            <a href="/products/<%= product._id %>">Go back</a>
        </div>
    </div>
</div>

